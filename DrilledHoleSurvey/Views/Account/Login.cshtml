@model DrilledHoleSurvey.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
            </div>
            <div style="padding-top:30px" class="panel-body">
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12">
                    @Html.ValidationSummary(true)
                </div>
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.TextBoxFor(m => m.UserName, new { type = "text", @class = "form-control", @value = "", @placeholder = "username" })
                    </div>
                    <div style="margin-bottom:25px">
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.Password, new { type = "password", @class = "form-control", @placeholder = "password" })
                    </div>
                    <div style="margin-bottom:25px">
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div style="margin-top:10px" class="form-group">
                        <!-- Button -->
                        <div class="col-sm-12 controls">
                            <button type="submit" class="btn btn-success" style="text-decoration:none !important">Login</button>
                        </div>
                    </div>
                    
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(function () {
            $("input[type=text]").first().focus();
        });
    </script>
}
