@model DrilledHoleSurvey.Models.HoleDepthInfoModel
@{
    ViewBag.Title = "Edit Depth Info";
}
<section class="container" style="margin-top:20px">
    <hgroup class="title">
        <h2>@ViewBag.Title</h2>
    </hgroup>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
    <table class="table">
        <tr>
            <td style="width: 200px">@Html.LabelFor(m => m.HoleName)</td>
            <td>@Html.DisplayFor(m => m.HoleName)@Html.HiddenFor(m => m.HoleName)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.Depth)</td>
            <td>@Html.DisplayFor(m => m.Depth)@Html.HiddenFor(m => m.Depth)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.Dip)</td>
            <td>@Html.TextBoxFor(m => m.Dip)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.Azimuth)</td>
            <td>@Html.TextBoxFor(m => m.Azimuth)</td>
        </tr>
    </table>
        <button type="submit" class="btn btn-primary" value="Save">
            <span>Save</span>
        </button>
    }
</section>
