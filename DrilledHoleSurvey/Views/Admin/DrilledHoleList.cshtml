@model DrilledHoleSurvey.Models.DrilledHoleListModel

@{
    ViewBag.Title = "Drilled Hole List";
}

@RenderPage("_AdminHeader.cshtml")

<section class="container" style="margin-top:20px">
    <table class="table table-striped">
        <tr>
            <th>Hole Name</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Dip</th>
            <th>Azimuth</th>
            <th colspan="3"></th>
        </tr>

        @foreach (var item in Model.DrilledHoleList)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Azimuth)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditDrilledHole", new { holeName = item.HoleName }, null)
                @Html.ActionLink("Delete", "DeleteDrilledHole", new { holeName = item.HoleName },
                    new { onclick = "return confirm ('Are you sure you will delete "  + item.HoleName + "?');" })
                @Html.ActionLink("Details", "HoleDepthInfoList", new { holeName = item.HoleName }, null)
            </td>
        </tr>
        }
    </table>

    <button type="button" class="btn btn-primary" value="Add Drilled Hole" onclick="@("location.href='" + @Url.Action("AddDrilledHole") + "'")">
        <span>Add Drilled Hole</span>
    </button>
</section>
